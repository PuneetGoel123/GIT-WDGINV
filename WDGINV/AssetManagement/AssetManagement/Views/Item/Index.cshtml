@model List<DataModel.Item>

@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Item List</h2>

@if (Model.Count > 0)
{
    <h3>List of Registered Items</h3>
    <table width="100%">
        <thead>
            <tr>
                <th width="20%">
                    ID
                </th>
                <th width="30%">
                    Name
                </th>
                <th width="30%">
                    Type
                </th>
                <th width="20%">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataModel.Item item in Model)
            {
                <tr>
                    <td>
                        @item.ItemId
                    </td>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.ItemType
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Item", new { @id = item.ItemId })">Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
